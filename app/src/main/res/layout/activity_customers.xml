<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    >




    <fragment
        android:id="@+id/fragment"
        android:name="com.bignerdranch.android.fitnesslifemanagementsystem.LoggedInFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/login_fragment"

        />



    <Space
        android:layout_width="10dp"
        android:layout_height="wrap_content"

        />

        <Button

            android:id="@+id/btnAddNewRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"




            android:onClick="onClick"

            android:text="@string/add_customers"


            android:layout_centerHorizontal="true"

            />

    <Button
        android:id="@+id/addSessions"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"


        android:onClick="onClick"
        android:padding="10dp"
        android:text="@string/add_sessions"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addSessions"
        />



    <ScrollView
        android:id="@+id/scrollViewDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addSessions"
        android:layout_weight="1">



    <LinearLayout
        android:id="@+id/layoutDisplayPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/scrollViewDisplay"

        android:orientation="vertical"
        >






    </LinearLayout>
    </ScrollView>


</RelativeLayout>
